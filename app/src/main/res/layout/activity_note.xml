<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="thatteam.firstapp.Note"
    android:background="#eeeeee"
    android:id="@+id/image"
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="To Do item"
        android:id="@+id/toDoLbl"
        android:layout_above="@+id/whenLbl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="When"
        android:id="@+id/whenLbl"
        android:layout_above="@+id/remindLbl"
        android:layout_alignLeft="@+id/toDoLbl"
        android:layout_alignStart="@+id/toDoLbl"
        android:layout_marginBottom="61dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reminder"
        android:id="@+id/remindLbl"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Meeting"
        android:id="@+id/MeetingLbl"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/remindLbl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add ToDo"
        android:id="@+id/buttontoDo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtBoxToDo"
        android:inputType="text"
        android:typeface="monospace"
        android:layout_alignBottom="@+id/toDoLbl"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/buttontoDo"
        android:layout_alignStart="@+id/buttontoDo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/whenTxtBox"
        android:layout_alignBottom="@+id/whenLbl"
        android:layout_alignLeft="@+id/txtBoxToDo"
        android:layout_alignStart="@+id/txtBoxToDo"
        android:layout_alignRight="@+id/txtBoxToDo"
        android:layout_alignEnd="@+id/txtBoxToDo"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reminderTxtBox"
        android:layout_alignBottom="@+id/remindLbl"
        android:layout_alignLeft="@+id/whenTxtBox"
        android:layout_alignStart="@+id/whenTxtBox"
        android:layout_alignRight="@+id/whenTxtBox"
        android:layout_alignEnd="@+id/whenTxtBox"
        android:inputType="text" />

    <Switch
        android:layout_width="@dimen/abc_action_bar_default_height_material"
        android:layout_height="wrap_content"
        android:id="@+id/switchMtg"
        android:layout_alignTop="@+id/MeetingLbl"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Place"
        android:id="@+id/textView2"
        android:layout_below="@+id/switchMtg"
        android:layout_alignRight="@+id/whenLbl"
        android:layout_alignEnd="@+id/whenLbl"
        android:layout_marginTop="51dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/placeTxtBox"
        android:inputType="text"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/buttontoDo"
        android:layout_alignStart="@+id/buttontoDo"
        android:layout_alignRight="@+id/reminderTxtBox"
        android:layout_alignEnd="@+id/reminderTxtBox" />



</RelativeLayout>
